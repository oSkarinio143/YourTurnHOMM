<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <append>false</append>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [userId=%X{userId:-anon}, traceId=%X{traceId:-brak}] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="TECHNICAL" class="ch.qos.logback.core.FileAppender">
        <file>logs/technical.log</file>
        <append>false</append>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [userId=%X{userId:-anon}, traceId=%X{traceId:-brak}] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="BUSINESS" class="ch.qos.logback.core.FileAppender">
        <file>logs/business.log</file>
        <append>false</append>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="pl.oskarinio.yourturnhomm.infrastructure.config.log.LogBusinessFilter">
            </evaluator>
            <OnMatch>ACCEPT</OnMatch>
            <OnMismatch>DENY</OnMismatch>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} [traceId=%X{traceId:-brak}] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ERROR" class="ch.qos.logback.core.FileAppender">
        <file>logs/error.log</file>
        <append>false</append>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="pl.oskarinio.yourturnhomm.infrastructure.config.log.LogExceptionFilter">
            </evaluator>
            <OnMatch>ACCEPT</OnMatch>
            <OnMismatch>DENY</OnMismatch>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} [traceId=%X{traceId:-brak}] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="TRACE">
        <appender-ref ref = "ERROR" additivity = "false"/>
        <appender-ref ref = "CONSOLE"/>
        <appender-ref ref = "TECHNICAL"/>
    </root>

    <logger name = "pl.oskarinio.yourturnhomm" level = "TRACE" additivity = "false">
        <appender-ref ref = "BUSINESS"/>
    </logger>

</configuration>